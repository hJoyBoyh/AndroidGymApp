<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="131dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageViewExerciceFromCategorie"
                        android:layout_width="118dp"
                        android:layout_height="130dp"
                        app:srcCompat="@drawable/ic_launcher_background"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="4dp" />

                    <TextView
                        android:id="@+id/txtTitreExerciceFromCategorie"
                        android:layout_width="214dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:text="Titre"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/textView3"
                        app:layout_constraintStart_toEndOf="@+id/imageViewExerciceFromCategorie"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.318" />

                    <ImageButton
                        android:id="@+id/btnDeleteExerciceFromCategorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.724"
                        app:layout_constraintStart_toEndOf="@+id/textView2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/baseline_restore_from_trash_24" />

                    <TextView
                        android:id="@+id/txtDescriptionExerciceFromCategorie"
                        android:layout_width="201dp"
                        android:layout_height="83dp"
                        android:text="TextView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btnUpdateExerciceFromCategorie"
                        app:layout_constraintHorizontal_bias="0.533"
                        app:layout_constraintStart_toEndOf="@+id/imageViewExerciceFromCategorie"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitreExerciceFromCategorie"
                        app:layout_constraintVertical_bias="0.0" />

                    <ImageButton
                        android:id="@+id/btnUpdateExerciceFromCategorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/btnDeleteExerciceFromCategorie"
                        app:layout_constraintVertical_bias="0.629"
                        app:srcCompat="@drawable/baseline_create_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>